<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loveapp"
    android:layout_height="match_parent"
    tools:context="com.example.naormalka.naordating2.ChooseLoginRegistrationActivity"
    android:orientation="vertical">





    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sign in"
        android:id="@+id/login"
       app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="263dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/register"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:id="@+id/register"
        app:bootstrapBrand="regular"
        app:bootstrapSize="lg"
        app:showOutline="false"
        app:roundedCorners="true"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="210dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="91dp"
        android:gravity="center"
        android:text="OR"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register"
        app:layout_constraintHorizontal_bias="0.0" />


    <com.facebook.login.widget.LoginButton
        xmlns:facebook="http://schemas.android.com/apk/res-auto"
        android:id="@+id/faceButton"
        facebook:com_facebook_login_text="Sign in with Facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        facebook:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        facebook:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="39dp"
        facebook:layout_constraintTop_toBottomOf="@+id/textView3"
        facebook:layout_constraintHorizontal_bias="0.0" />


</android.support.constraint.ConstraintLayout>