<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:id="@+id/newconver"
    android:background="@drawable/loveapp"
    tools:context="com.example.naormalka.naordating2.NewMatchFragment">


    <com.beardedhen.androidbootstrap.AwesomeTextView
        android:layout_width="298dp"
        android:layout_height="68dp"
        android:textStyle="italic"
        android:textSize="30dp"

        app:fontAwesomeIcon="fa_android"
        app:typicon="ty_anchor"
        app:bootstrapText="this is a match"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.133"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/awesomeTextView" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile1"
        android:layout_width="103dp"
        android:layout_height="78dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/awesomeTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="35dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile2"
        android:layout_width="103dp"
        android:layout_height="78dp"
        android:src="@drawable/profile"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/awesomeTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="27dp" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="274dp"
        android:layout_height="25dp"
        android:text="Start a conversation"
        app:bootstrapBrand="danger"
        app:bootstrapSize="sm"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="false"
        android:id="@+id/btnConversion"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/keepSurfing" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="274dp"
        android:layout_height="25dp"
        android:text="Keep Surfing"
        app:bootstrapBrand="danger"
        app:bootstrapSize="sm"
        app:buttonMode="regular"
        app:showOutline="false"
        app:roundedCorners="false"
        android:id="@+id/keepSurfing"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="86dp" />

    <TextView
        android:id="@+id/etprofile1"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnConversion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile1"
        app:layout_constraintVertical_bias="0.307" />

    <TextView
        android:id="@+id/etprofile2"
        android:layout_width="87dp"
        android:layout_height="44dp"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="43dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnConversion"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile2" />


</android.support.constraint.ConstraintLayout>
